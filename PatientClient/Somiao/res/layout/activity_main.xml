<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_animation_rotate"
        android:layout_width="200dip"
        android:layout_height="200dip"
        android:src="@drawable/histipal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/codeNumber"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_scan"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:background="@drawable/et_round_white"
            android:hint="@string/hint_code"
            android:inputType="number"
            android:text="10000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dip"
            android:background="@drawable/btn_round_gray"
            android:text="@string/scan" />

        <Button
            android:id="@+id/btn_logic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:background="@drawable/btn_round_gray"
            android:text="@string/logic" />
    </LinearLayout>

</LinearLayout>